@inject HttpClient Http

<EditForm Model=@Message OnSubmit=@Send class="form-group">
    <div class="form-row">
        <div>
            <label for="Name"><Icon Name="@("far fa-user")" />Name</label>
            <InputText @bind-Value=Message.Name />
        </div>
        <div style="flex-shrink: 3; width: 25%; "></div>
        <div>
            <label for="EMail"><Icon Name="@("far fa-envelope")" />EMail</label>
            <InputText @bind-Value=Message.EMail />
        </div>
    </div>
    <div class="form-group">
        <label for="Content"><Icon Name="@("far fa-question-circle")" />How can I help you?</label>
        <InputTextArea @bind-Value=Message.Content Rows="10" />
    </div>
    <button type="submit" class=""><Icon Name="@("far fa-paper-plane")" />Submit</button>
</EditForm>


@code
{
    private Message Message = new Message();

    private async Task Send()
    {
        await Http.PostAsJsonAsync("Message", Message);
        return;
    }
}